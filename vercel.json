{
    "version": 2,
    "builds": [

        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
          },
          {
            "src": "public/*",
            "use": "@vercel/static"
          },
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "functions": {
        "api/**/*.js": {
          "memory": 1024,      // Memory in MB
          "maxDuration": 60    // Timeout in seconds
        },
    "routes": [
      {
       
        "src": "/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }