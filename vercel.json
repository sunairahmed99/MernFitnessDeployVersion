{
    "version": 2,
    "builds": [

        
          {
            "src": "public/*",
            "use": "@vercel/static"
          },
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "functions": {
        "api/**/*.js": {
          "memory": 1024,      
          "maxDuration": 800  
        }
      },
    "routes": [
      {
       
        "src": "/(.*)",
        "dest": "server.js"
      },
     
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }